<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
</head>
<body>
<div>
    <ul>
        <li><a href="/">채팅목록</a></li>
        <li><a href="/save-form">채팅 메시지쓰기</a></li>
    </ul>
</div>
<h1>채팅 목록</h1>
<hr>
<ul id="chat-box">
    {{#models}}
        <li>{{msg}}</li>
    {{/models}}
</ul>

<script>
    setInterval(() => {
        chatList();
    }, 2000);

    async function chatList() {
        let response = await fetch("/api");
        let reponseBody = await response.json();

        let site = document.querySelector("#chat-box");
        site.innerHTML = "";

        chatBox(reponseBody, site); // 받은 리스트를 반복해서 추가하는 함수
    }

    function chatBox(reponseBody, site) {
        reponseBody.forEach(chat => {
            let dom = document.createElement("li");
            dom.innerHTML = chat.msg;
            site.append(dom);
        });
    }
</script>

</body>
</html>